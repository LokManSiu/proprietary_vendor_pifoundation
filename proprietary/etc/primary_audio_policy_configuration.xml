<!-- Primary Audio HAL Audio Policy Configuration file. -->
<!-- This file would generally be auto-generated by the dev console. -->
<module name="primary" halVersion="2.0">
  <attachedDevices>
    <item>I2S Output</item>
    <item>I2S Input</item>
    <item>Aux Jack</item>
  </attachedDevices>
  <defaultOutputDevice>Aux Jack</defaultOutputDevice>
  <mixPorts>
    <mixPort name="primary output" role="source" flags="AUDIO_OUTPUT_FLAG_PRIMARY">
      <profile name="" format="AUDIO_FORMAT_PCM_16_BIT"
               samplingRates="48000" channelMasks="AUDIO_CHANNEL_OUT_STEREO"/>
    </mixPort>
    <mixPort name="secondary output" role="source">
      <profile name="" format="AUDIO_FORMAT_PCM_16_BIT"
               samplingRates="48000" channelMasks="AUDIO_CHANNEL_OUT_STEREO"/>
    </mixPort>
    <mixPort name="primary input" role="sink">
      <profile name="" format="AUDIO_FORMAT_PCM_16_BIT"
               samplingRates="48000" channelMasks="AUDIO_CHANNEL_IN_STEREO"/>
    </mixPort>
  </mixPorts>
  <devicePorts>
    <!-- To get the desired prioritization of AUX jack over I2S, and USB over AUX,
         treat the I2S bus as a speaker/microphone and AUX as HDMI. -->
    <devicePort tagName="I2S Output" type="AUDIO_DEVICE_OUT_BUS" role="sink"/>
    <devicePort tagName="I2S Input" type="AUDIO_DEVICE_IN_BUS" role="source"/>
    <devicePort tagName="Aux Jack" type="AUDIO_DEVICE_OUT_SPEAKER" role="sink"/>
  </devicePorts>
  <routes>
    <route type="mix" sink="I2S Output" sources="secondary output"/>
    <route type="mix" sink="Aux Jack" sources="primary output"/>
    <route type="mix" sink="primary input" sources="I2S Input"/>
  </routes>
</module>
